---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  
  {
    url: "https://t.me/buttercoinethportal",
    description: "Telegram",
    icon: "fa-brands:telegram",
  },
  {
    url: "https://twitter.com/buttercoineth",
    description: "Twitter",
    icon: "fa-brands:twitter",
  },
  {
    url: "https://etherscan.io/token/0x0d248ce39e26fb00f911fb1e7a45a00d8c94341c",
    description: "Etherscan",
    icon: "fa-brands:twitter",
  },
  {
    url: "https://www.dextools.io/app/en/ether/pair-explorer/0xb44cf0fadb3230906ded38c878e8b68a4bf69921",
    description: "DEXTools",
    icon: "fa-brands:twitter",
  },
  {
    url: "https://coinmarketcap.com/currencies/butter",
    description: "CoinMarketCap",
    icon: "fa-brands:twitter",
  },
  {
    url: "https://www.coingecko.com/en/coins/butter",
    description: "CoinGecko",
    icon: "fa-brands:twitter",
  },
  
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-8 sm:grid-cols-6 ">
    {
      links.map((link) => (
        <li>
          <a
          class="flex h-12 shadow-lg font-bold w-auto items-center justify-center bg-yellow-300 hover:bg-yellow-900 px-1 py-4"
  href={link.url}
  target="_blank"
  rel="noopener noreferrer"
>
  <span class="sr-only">{link.description}</span>
  <span>{link.description}</span>
</a>
        </li>
      ))
    }
  </ul>
</footer>
